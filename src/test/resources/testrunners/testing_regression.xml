<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="E-Commerce Test Regression Playwright Suite"
	thread-count="2" parallel="tests" verbose="4">

	<listeners>
		<listener class-name="com.qa.ecommerce.listeners.ExtentReportListener" />
	</listeners>

	<test name="E-Commerce Home Page Test">
		<classes>
			<class name="com.qa.ecommerce.tests.HomePageTest" />
		</classes>
	</test>

	<test name="E-Commerce Login Page Test">
		<classes>
			<class name="com.qa.ecommerce.tests.LoginPageTest" />
		</classes>
	</test>


</suite>